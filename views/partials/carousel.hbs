<div class="d-flex justify-content-center">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carouselExampleIndicators">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      {{#if currentUser.images.[1]}}
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      {{/if}}
      {{#if currentUser.images.[2]}}
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      {{/if}}
      {{#if currentUser.images.[3]}}
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      {{/if}}
      {{#if currentUser.images.[4]}}
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      {{/if}}
      {{#if currentUser.images.[5]}}
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
      {{/if}}
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="{{currentUser.images.[0]}}" alt="First slide">
      </div>
      {{#if currentUser.images.[1]}}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{currentUser.images.[1]}}" alt="Second slide">
      </div>
      {{/if}}
      {{#if currentUser.images.[2]}}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{currentUser.images.[2]}}" alt="Third slide">
      </div>
      {{/if}}
      {{#if currentUser.images.[3]}}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{currentUser.images.[3]}}" alt="Third slide">
      </div>
      {{/if}}
      {{#if currentUser.images.[4]}}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{currentUser.images.[4]}}" alt="Third slide">
      </div>
      {{/if}}
      {{#if currentUser.images.[5]}}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{currentUser.images.[5]}}" alt="Third slide">
      </div>
      {{/if}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" id="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" id="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
