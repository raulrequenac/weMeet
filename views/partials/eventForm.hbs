<div class="d-flex justify-content-between align-items-center">
  <div class="col-8 order-md-1 mt-5">
    {{#if event.isNew}}
      <form action="/events/new" method="POST" class="mb-4" enctype="multipart/form-data">
        <div class="form-group">
          <label for="images">Images</label>
          <div class="file-field">
            <div class="btn btn-primary red-box btn-sm float-left h-38">
              <span>Choose file</span>
              <input type="file" class="d-none">
            </div>
            <div class="file-path-wrapper">
              <input name="images" type="text" class="file-path validate h-38 {{#if error.images }}is-invalid{{/if}}" placeholder="Upload your files" multiple>
            </div>
          </div>
          {{#if error.images}}
            <div class="invalid-feedback">
              {{error.images.message}}
            </div>
          {{/if}}
        </div>
    {{else}}
      <form action="/events/edit/{{event.id}}" method="POST" class="mb-4" enctype="multipart/form-data"></form>
      <a href="/events/edit/images{{event.id}}" class="btn red-box btn-primary">Change images</a>
    {{/if}}
    <div class="form-group">
      <label for="name">Event Name</label>
      <input name="name" type="text" class="form-control" id="name" placeholder="Enter Name" value="{{event.name}}">
    </div>

    <div class="form-group">
      <label for="name">Description</label>
      <textarea placeholder="Description" name="description" type="text" class="form-control" id="description"
        rows="3">{{event.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input name="date" type="date" class="form-control {{#if error.date }}is-invalid{{/if}}" id="date"
        placeholder="Enter date" value="{{dateValue event.date }}">

      {{#if error.date}}
        <div class="invalid-feedback">
          {{error.date.message}}
        </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input name="location" type="text" class="form-control" id="location" placeholder="Location"
        value="{{event.location}}">
    </div>

    <div class="form-group">
      <label for="categories">Categories</label>
      <select name="category" class="custom-select">
        {{#each categories as |category|}}
          <option value="{{category}}">{{category}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="capacity">Capacity</label>
      <input name="capacity" type="number" class="form-control" id="capacity" placeholder="Capacity"
        value="{{event.capacity}}">
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input name="price" type="number" class="form-control" id="price" placeholder="Price" value="{{event.price}}">
    </div>

    {{#if event.isNew}}
      <button type="submit" class="btn red-box btn-primary btn-outline btn-sm">
        Create Event
      </button>
    {{else}}
      <button type="submit" class="btn red-box btn-primary btn-outline btn-sm">
        Edit Event
      </button>
    {{/if}}
    </form>
  </div>
  {{#if event.isNew}}
    <div class="col-4">
      <h1 class="red-text">New Event</h1>
      <img src="/images/undraw_start_building_vqhd.svg" style="width:calc(100% - 16px)">
    </div>
  {{else}}
    <div class="col-4">
      <h1 class="red-text">Edit Event</h1>
      <img src="/images/undraw_start_building_vqhd.svg" style="width:calc(100% - 16px)">
    </div>
  {{/if}}
</div>
