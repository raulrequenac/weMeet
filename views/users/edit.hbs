<form action="/users/edit" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name"
      value="{{ user.name }}">

    {{#if error.name}}
      <div class="invalid-feedback">
        {{error.name.message}}
      </div>
    {{/if}}
  </div>


  <div class="form-group">
    <label for="email">Email</label>
    <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
      value="{{ user.email }}">

    {{#if error.email}}
      <div class="invalid-feedback">
        {{error.email.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="images">Images</label>
    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[0]}}">

    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[1]}}">

    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[2]}}">

    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[3]}}">

    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[4]}}">

    <input name="images" type="file" class="form-control-file {{#if error.images }}is-invalid{{/if}}" id="images"
      placeholder="Enter images url" value="{{user.images.[5]}}">

    {{#if error.images}}
      <div class="invalid-feedback">
        {{error.images.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="password">

    {{#if error.password}}
      <div class="invalid-feedback">
        {{error.password.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="bio">Bio</label>
    <textarea name="bio" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}" id="bio"
      placeholder="Enter bio" value="{{ user.bio }}" rows="4"></textarea>

    {{#if error.bio}}
      <div class="invalid-feedback">
        {{error.bio.message}}
      </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">
    Sign up
  </button>
</form>
