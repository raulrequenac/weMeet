<body>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card mt-5">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="/images/granada-icon.png" class="brand_logo" alt="Logo" width="200">
					</div>
				</div>
				<div class="d-flex flex-column form_container">
					<form action="/login/companies" method="post">
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" name="email" class="form-control input_user" value="{{user.email}}"
								placeholder="email">
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="password" class="form-control input_pass" value="{{user.password}}"
								placeholder="password">
						</div>
						<div class="d-flex justify-content-center mt-3 login_container">
							<button type="submit" name="button" class="btn btn-primary light-blue">Login</button>
						</div>
					</form>
					<div class="d-flex justify-content-center mt-3 login_container">
						<form action="/login/google/companies" method="post">
							<button type="submit" name="button" class="btn btn-primary light-blue">
								<i class="fa fa-google"></i>
								Login With Google
							</button>
						</form>
					</div>
				</div>
				<div class="mt-4">
					<div class="d-flex justify-content-center links">
						Don't have an account? <a href="/companies/new" class="ml-2 light-blue-text">Sign Up</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
