<div class="d-flex justify-content-between align-items-center">
  <div class="col-8 order-md-1 mt-5 p-3 ">
    {{#if company.isNew}}
      <form action="/companies/new" method="POST" enctype="multipart/form-data" class="container">

        <div class="form-group">
          <label for="logo">Logo</label>
          <div class="file-field">
            <div class="btn red-box btn-sm float-left h-38">
              <span class="">Choose file</span>
              <input type="file" class="d-none">
            </div>
            <div class="file-path-wrapper">
              <input name="logo" type="text" class="file-path validate h-38 {{#if error.Logo }}is-invalid{{/if}}" placeholder="Upload your files" multiple>
            </div>
          </div>
          {{#if error.Logo}}
            <div class="invalid-feedback">
              {{error.Logo.message}}
            </div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
            placeholder="password" value="{{ company.password }}">

          {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
          {{/if}}
        </div>
    {{else}}
      <form action="/companies/edit" method="POST" enctype="multipart/form-data" id="form">

        <a href="/companies/edit/logo" class="btn light-blue btn-primary">Change logo</a>
        <a href="/companies/edit/password" class="btn light-blue btn-primary">Change Password</a>
    {{/if}}

    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name"
        placeholder="Enter name" value="{{ company.name }}">

      {{#if error.name}}
        <div class="invalid-feedback">
          {{error.name.message}}
        </div>
      {{/if}}
    </div>


    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
        placeholder="Enter email" value="{{ company.email }}">

      {{#if error.email}}
        <div class="invalid-feedback">
          {{error.email.message}}
        </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" type="text" class="form-control {{#if error.description }}is-invalid{{/if}}"
        id="description" placeholder="Enter description" rows="4">{{ company.description }}</textarea>

      {{#if error.description}}
        <div class="invalid-feedback">
          {{error.description.message}}
        </div>
      {{/if}}
    </div>
    {{#if user.isNew}}
      <button type="submit" class="btn light-blue btn-primary">
        Sign up
      </button>
    {{else}}
      <button type="submit" class="btn light-blue btn-primary" id="submit">
        Update
      </button>
    {{/if}}
    </form>
  </div>

  <div class="col-4">
    <img src="../images/undraw_online_organizer_ofxm.svg" style="width:calc(100% - 16px)">
  </div>
</div>
